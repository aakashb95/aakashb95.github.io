<div class="col mb-4">
  <a href="{% if interest.redirect %}{{ interest.redirect }}{% else %}{{ interest.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if interest.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=interest.img sizes="(min-width: 768px) 156px, 50vw" alt="interest thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if interest.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ interest.title }}</h3>
            <p class="card-text">{{ interest.description }}</p>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>